    "version": "0.2.0",
    "configurations": [
        {
            "name": "g++.exe debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}\\ss.exe",
            "args": ["magic.cpp"],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\Programming\\MinGW\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}